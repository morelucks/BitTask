# Hiro Chainhooks Configuration
# Required to authenticate with the Hiro Chainhooks API
CHAINHOOKS_API_KEY=your_api_key_here

# Network to use (mainnet | testnet), defaults to testnet
CHAINHOOKS_NETWORK=testnet

# Secret for verifying webhook signatures (optional)
CHAINHOOKS_SECRET=your_webhook_secret

# URL where Chainhooks will send events, used by the registration script
WEBHOOK_URL=http://localhost:3000/api/webhooks/chainhook
